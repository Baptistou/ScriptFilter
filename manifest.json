{
	"manifest_version": 2,
	"name": "ScriptFilter",
	"version": "1.0",
	"author": "Baptiste Th√©mine",
	
	"description": "Blocks scripts and ressources from a website with Content Security Policy.",
	
	"permissions": [
		"<all_urls>",
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking"
	],
	
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"64": "images/icon64.png"
	},
	
	"background": {
		"scripts": ["functions.js","background.js"]
	},
	
	"browser_action": {
		"default_title": "ScriptFilter",
		"default_icon": "images/icon48.png"
	},
	
	"options_ui": {
		"page": "settings/index.html",
		"open_in_tab": true
	}
}